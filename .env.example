# ============================
# JobFit AI - Environment Variables
# ============================
# Copy this file to .env and fill in real values.
# NEVER commit the .env file to version control.
#
# Usage:
#   Development: docker compose -f docker-compose.yml -f docker-compose.dev.yml up
#   Production:  docker compose -f docker-compose.yml -f docker-compose.prod.yml up -d

# === Application Environment ===
# Values: development | test | production
APP_ENV=development

# === Database ===
DATABASE_URL=postgresql+asyncpg://postgres:postgres@postgres:5432/jobfit_dev
# Production example: postgresql+asyncpg://<user>:<strong_password>@postgres:5432/jobfit_prod

# === Redis ===
REDIS_URL=redis://redis:6379/0

# === Authentication ===
JWT_SECRET_KEY=dev-secret-key-not-for-production
# Production: use a cryptographically random 64-character string
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(48))"
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
# Production: 15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30
# Production: 7

# === LLM Providers ===
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxx
DEEPSEEK_API_KEY=sk-xxxxxxxxxxxxxxxxxxxx
LLM_PROVIDER=openai

# === Vector Store ===
CHROMA_HOST=chromadb
CHROMA_PORT=8000
# Internal Docker port (ChromaDB listens on 8000; host-mapped to 8200 in dev)

# === Object Storage (S3 / MinIO) ===
S3_ENDPOINT=http://minio:9000
S3_ACCESS_KEY=minioadmin
# Production: use a strong access key
S3_SECRET_KEY=minioadmin
# Production: use a strong secret key
S3_BUCKET_NAME=jobfit-uploads-dev
# Production: jobfit-uploads

# === Stripe (stubbed in MVP) ===
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxxxxx
# Production: sk_live_xxxxxxxxxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxx

# === Logging ===
LOG_LEVEL=DEBUG
# Production: WARNING

# === Server ===
UVICORN_WORKERS=1
# Production: 4 (or 2 * CPU_CORES + 1)

# === Application ===
MAX_UPLOAD_SIZE_MB=10

# === Frontend ===
NEXT_PUBLIC_API_URL=http://localhost:8000
# Production: https://api.jobfit.ai
